{% extends "admin/base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success" href="{{path('admin_specification_add')}}">{{'Add' | trans}}</a>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Bordered Table</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>{{'Name' | trans}}</th>
                            <th>{{'Action' | trans}}</th>
                        </tr>
                        {% for item in list %}
                            <tr>
                                <td>{{item.id}}</td>
                                <td>{{item.name}}</td>
                                <td><a class="btn btn-danger" href="{{path('admin_specification_remove', {'id': item.id} )}}"><i class="fa fa-close"></i></a></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <!-- /.box-body -->
                
                {{ knp_pagination_render(list) }}
                  
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>

{% endblock %}